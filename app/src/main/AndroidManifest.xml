<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.microsoft.office365.profile" >

    <!-- Required to connect to Office 365 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required to use outlook services -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <application
        android:name=".ProfileApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.UserListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_user_list">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:noHistory="true"
            android:parentActivityName=".view.UserListActivity" >
        </activity>
        <activity
            android:name="com.microsoft.aad.adal.AuthenticationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/adal_title" >
        </activity>
    </application>

</manifest>

