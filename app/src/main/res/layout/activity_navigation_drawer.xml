<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_navigation_drawer_navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/activity_navigation_drawer_activity_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:padding="@dimen/padding_layout_file"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_navigation_drawer_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="@dimen/padding_half"
            android:text="Name"/>

        <TextView
            android:id="@+id/activity_navigation_drawer_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="@dimen/padding_half"
            android:text="Email"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/padding_half"
            android:padding="@dimen/padding_medium"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/activity_navigation_drawer_sign_out_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_half"
            android:text="Sign Out"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>